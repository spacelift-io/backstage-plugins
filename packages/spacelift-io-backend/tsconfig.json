{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "../../dist-types/packages/spacelift-io-backend/src",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
